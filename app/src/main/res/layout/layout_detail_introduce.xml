<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="@dimen/dp_36">


    <TextView
        android:id="@+id/item_introduce"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_30"
        tools:text="@string/tv_steps"
        android:textColor="@color/textTitle"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="@dimen/dp_3"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/color"
        app:layout_constraintBottom_toBottomOf="@id/item_introduce"
        app:layout_constraintLeft_toLeftOf="@id/item_introduce"
        app:layout_constraintTop_toTopOf="@id/item_introduce" />

</androidx.constraintlayout.widget.ConstraintLayout>