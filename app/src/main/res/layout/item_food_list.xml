<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_87"
    android:layout_marginBottom="@dimen/dp_1"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">


    <ImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/dp_66"
        android:layout_height="@dimen/dp_66"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textTitle"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toRightOf="@id/item_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_image"
        tools:text="@string/tools_text" />

    <TextView
        android:id="@+id/item_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="@color/textUnSelected"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toBottomOf="@id/item_image"
        app:layout_constraintLeft_toLeftOf="@id/item_title"
        tools:text="阅读 2019" />

    <TextView
        android:id="@+id/item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/textUnSelected"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toBottomOf="@id/item_read"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_read"
        tools:text="步骤：4步" />

    <TextView
        android:id="@+id/item_descript"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/textUnSelected"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toTopOf="@id/item_read"
        app:layout_constraintLeft_toLeftOf="@id/item_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_title"
        tools:text="昨晚约了一帮朋友来家里玩儿，晚上俺就弄简单又方便的火锅来吃了，大冷天的，做菜多麻烦啊。吃的热气腾腾，香香辣辣的排骨牛肉丸火锅 。 因为吃火锅很热啊，所以特别做了一道凉拌菜，清一清口感和肠胃。" />


</androidx.constraintlayout.widget.ConstraintLayout>